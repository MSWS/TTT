{
  "pr_template": "- ##{{NUMBER}}: #{{TITLE}}",
  "commit_template": "- #{{TITLE}}",
  "empty_template": "- No changes",
  "categories": [
    {
      "title": "## Features",
      "labels": [
        "feature",
        "feat"
      ]
    },
    {
      "title": "## Fixes",
      "labels": [
        "fix",
        "bug"
      ]
    },
    {
      "title": "## CI / CD",
      "labels": [
        "ci",
        "cd",
        "build",
        "workflow",
        "test"
      ]
    },
    {
      "title": "### Other",
      "labels": []
    }
  ],
  "label_extractor": [
    {
      "pattern": "^(build|chore|ci|cd|workflow|docs|feat|feature|fix|bug|perf|refactor|revert|style|test){1}(\\([\\w\\-\\.]+\\))?(!)?: ([\\w ])+([\\s\\S]*)",
      "on_property": "title",
      "target": "$1"
    }
  ]
}