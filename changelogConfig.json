{
  "template": "# Changelog\n\n#{{CHANGELOG}}\n\n<details><summary>Uncategorized</summary>\n\n#{{UNCATEGORIZED}}\n</details>",
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": [
        "feature",
        "enhancement"
      ]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": [
        "fix",
        "bug"
      ]
    },
    {
      "title": "## 🧪 Tests & CI",
      "labels": [
        "test",
        "ci",
        "build",
        "chore"
      ]
    },
    {
      "title": "## 📝 Docs",
      "labels": [
        "docs",
        "documentation"
      ]
    }
  ],
  "ignore_labels": [
    "wip",
    "ignore"
  ],
  "sort": {
    "order": "DESC",
    "on_property": "mergedAt"
  },
  "pr_template": "- #{{TITLE}} ([#{{NUMBER}}]({{URL}}) by @{{AUTHOR}})",
  "empty_template": "_No changes in this release._"
}